@using BugTrackerSU.Common
@using BugTrackerSU.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/articlesCard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" i />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body style="overflow:scroll;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-bug"></i> @GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   <div class="navbar-nav flex-grow-1">    
                        @if (this.SignInManager.IsSignedIn(this.User))
                        {
                            <div class="dropdown">
                                <button class="btn text-light" type="button" id="dropdownMenuButton"  data-toggle="dropdown">
                                    <i class="fas fa-home"></i> Home
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </div>
                            </div>


                            <div class="dropdown">
                                <button class="btn text-light" type="button" id="dropdownMenuButton"  data-toggle="dropdown">
                                    <i class="fas fa-project-diagram"></i> Projects
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item " asp-area="" asp-controller="Projects" asp-action="MyProjects" asp-route-id="" >My Projects</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchProject">Search for Project</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Projects" asp-action="Create">Create Project</a>
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="btn text-light" type="button" id="dropdownMenuButton"  data-toggle="dropdown">
                                    <i class="fas fa-tasks"></i> Tickets
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item " asp-area="" asp-controller="Tickets" asp-action="MyTickets" asp-route-id="" >My Tickets</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchTicket">Search for Ticket</a>
                                </div>
                            </div>
                            <div class="dropdown">
                                <button class="btn text-light" type="button" id="dropdownMenuButton"  data-toggle="dropdown">
                                    <i class="fas fa-pager"></i> Posts
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item " asp-area="" asp-controller="Posts" asp-action="All" >All Posts</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Search" asp-action="SearchPost">Search for Post</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Posts" asp-action="Create">Create Post</a>
                                </div>
                            </div>
                             <div class="dropdown">
                                <button class="btn text-light" type="button" id="dropdownMenuButton"  data-toggle="dropdown">
                                    <i class="fab fa-leanpub"></i> Learn
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item " asp-area="" asp-controller="Categories" asp-action="All" >Categories</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Articles" asp-action="All">Articles</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Articles" asp-action="Create">Create Article</a>
                                </div>
                            </div>

                        }
                    </div>
                      
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <div  class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>