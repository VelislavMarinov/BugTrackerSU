@using BugTrackerSU.Web.ViewModels.Categories
@model AllCategoriesViewModel

@{
    ViewData["Title"] = "Categories";
}

<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>

<section id="gallery">
  <div class="container">
    <div class="row">
  @foreach (var category in @Model.Categories)
 {
   <div class="col-lg-4 mb-4">
    <div class="card">
      <img src="@category.ImageUrl" alt="" class="card-img-top" width="200" height="300">
      <div class="card-body">
        <h5 class="card-title">@category.Name</h5>
        <p class="card-text">@category.ShortDescription</p>

       <form class="align-content-lg-around" method="post" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id">
       <button class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal">Delete</button></form>

        <br>
        <a asp-controller="Articles"
             asp-action="ByCategory"
             asp-route-categoryId="@category.Id"
             class="btn btn-primary">
             Articles
        </a>
        <a asp-controller="Categories"
             asp-action="Edit"
             asp-route-Id="@category.Id"
             class="btn btn-primary">
             Edit
        </a>
      </div>
     </div>
    </div>   
 }
  </div>
</div>
</section>


<partial name="_CategoriesPagingPartial" model="@Model" />