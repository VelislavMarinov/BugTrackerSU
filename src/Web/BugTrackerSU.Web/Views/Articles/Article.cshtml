@using BugTrackerSU.Web.ViewModels.Articles
@model ArticleViewModel


@{
    this.ViewData["Title"] = Model.Name;
}

<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Articles/All">All Articles</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="card blogShort border">
        <div class="card-header border">
                <h1 class = "text-center">@Model.Name</h1>
        </div>
        <div class="card-body row-md-12">
             <div class="embed-responsive embed-responsive-16by9">
                 <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
             </div>
        </div>
        <div class="card-footer border row-md-4 mt-2">
            <article>
               <h6>Description:</h6> 
               @Model.Description
            </article>
        </div>
    </div>
</div>