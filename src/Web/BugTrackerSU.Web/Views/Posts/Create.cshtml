@using BugTrackerSU.Data.Models.Enums
@using BugTrackerSU.Web.ViewModels.Posts
@model CreatePostFormModel

@{
    ViewData["Title"] = "Create Post";
}

<nav aria-label="breadcrumb" class="main-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Posts/All">All Posts</a></li>
        <li class="breadcrumb-item active" aria-current="page"><strong>@this.ViewData["Title"]</strong></li>
    </ol>
</nav>

<div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-8 col-md-6">
              <form method="post" class="bg-dark  rounded-5 shadow-5-strong p-5">
                <h1 class="text-center text-light">@ViewData["Title"]</h1>\
                <br />
                <!-- Title input -->
                <div class="form-outline mb-4">
                  <label asp-for="Title" class="text-light"></label>
                  <input asp-for="Title" placeholder="Post Title" class="form-control">
                  <span asp-validation-for="Title" class="text-danger small"></span>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div></div>

                <!-- Content input -->
                 <div class="form-outline mb-4">
                  <label asp-for="Content" class="text-light"></label>
                  <input asp-for="Content" placeholder="Post Content" class="form-control">
                  <span asp-validation-for="Content" class="text-danger small"></span>
                <div class="form-notch"><div class="form-notch-leading" style="width: 9px;"></div><div class="form-notch-middle" style="width: 88.8px;"></div><div class="form-notch-trailing"></div></div></div>

               <div class="form-group">
                    <label asp-for="ProjectId" class="text-light"></label>
                    <select asp-for="ProjectId" class="form-control">
                     @foreach (var project in Model.Projects)
                     {
                        <option value="@project.ProjectId">@project.Title</option>
                     }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary btn-block">@ViewData["Title"]</button>
              </form>
            </div>
          </div>
        </div>


