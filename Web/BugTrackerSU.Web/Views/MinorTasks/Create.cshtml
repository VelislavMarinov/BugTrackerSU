@using BugTrackerSU.Data.Models.Enums
@using BugTrackerSU.Web.ViewModels.MinorTasks
@using BugTrackerSU.Web.ViewModels.Tickets
@model CreateMinorTaskFormModel

@{
    ViewData["Title"] = "Create Task";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-10 offset-xl-1 col-xl-10">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Task Title">
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="TicketId" hidden></label>
                    <label asp-for="Content"></label>
                    <input asp-for="Content" class="form-control" placeholder="Information about Task">
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>
                <div class="form-group">
                   <label asp-for="TaskType" ></label>
                     <select asp-for="TaskType" class="form-control">
                        @foreach (int choice in Enum.GetValues(typeof(TaskType)))
                          {
                              <option value="@choice">@Enum.GetName(typeof(TaskType), choice)</option>
                          }
                 </select>
                </div>
                <input type="submit" class="btn btn-info" value="@ViewData["Title"]" />
            </form>
        </div>
    </div>
</div