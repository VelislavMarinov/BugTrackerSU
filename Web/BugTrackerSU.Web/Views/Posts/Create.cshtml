@using BugTrackerSU.Data.Models.Enums
@using BugTrackerSU.Web.ViewModels.Posts
@model CreatePostViewModel

@{
    ViewData["Title"] = "Create Post";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-10 offset-xl-1 col-xl-10">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Ticket Title">
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Content"></label>
                    <input asp-for="Content" class="form-control" placeholder="Information about Post">
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectId"></label>
                    <select asp-for="ProjectId" class="form-control">
                     @foreach (var project in Model.Projects)
                     {
                        <option value="@project.ProjectId">@project.Title</option>
                     }
                    </select>
                </div>
                <input type="submit" class="btn btn-info" value="@ViewData["Title"]" />
            </form>
        </div>
    </div>
</div>


